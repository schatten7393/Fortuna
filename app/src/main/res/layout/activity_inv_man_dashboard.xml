<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".InvManDashboardActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="5dp"
        android:id="@+id/header"
        android:contentDescription="@string/menu"
        android:background="@color/warm_green">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:id="@+id/logoutButton"
            android:contentDescription="Logout"
            android:drawableRight="@drawable/power_off_solid"
            android:background="null"
            android:padding="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstButtonRow"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/pink"
            android:drawableTop="@drawable/add_sign"
            android:layout_marginRight="4sp"
            android:contentDescription="Add Supplies"
            android:text="Add Supply"
            android:textStyle="bold"
            android:textColor="@color/sakura"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/pink"
            android:drawableTop="@drawable/withdraw"
            android:layout_marginLeft="4sp"
            android:contentDescription="Withdraw Supplies Supplies"
            android:text="Withdraw Supply"
            android:textStyle="bold"
            android:textColor="@color/sakura"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondButtonRow"
        android:layout_below="@id/firstButtonRow"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/pink"
            android:drawableTop="@drawable/clipboard_list_solid"
            android:layout_marginRight="4sp"
            android:contentDescription="Transactions"
            android:text="Transactions"
            android:textStyle="bold"
            android:textColor="@color/sakura"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/pink"
            android:drawableTop="@drawable/request_supplies"
            android:layout_marginLeft="4sp"
            android:contentDescription="Supply requests"
            android:text="Supply Requests"
            android:textStyle="bold"
            android:textColor="@color/sakura"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdButtonRow"
        android:layout_below="@id/secondButtonRow"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/pink"
            android:drawableTop="@drawable/inventory"
            android:layout_marginRight="4sp"
            android:contentDescription="Transactions"
            android:text="Inventory"
            android:textStyle="bold"
            android:textColor="@color/sakura"/>

    </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/warm_green"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:background="null"
            android:contentDescription="Home Button"
            android:drawableTop="@drawable/house_solid" />

        <Button
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:id="@+id/profileButton"
            android:drawableTop="@drawable/profile"
            android:contentDescription="Profile Button"
            android:background="null"/>
    </LinearLayout>

</RelativeLayout>